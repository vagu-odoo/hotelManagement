<?xml version="1.0"?>
<odoo>
    <record id="hotel_booking_view_form" model="ir.ui.view">
        <field name="name">hotel.booking.form.view.inherit</field>
        <field name="model">hotel.booking</field>
        <field name="inherit_id" ref="hotel.hotel_bookings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='status']" position="after">
                <button name="action_create_invoice" type="object" string="Create Invoice"/>
            </xpath>
        </field>
    </record>
</odoo>